<li><math xmlns="http://www.w3.org/1998/Math/MathML" display="inline"><semantics><mrow><mrow><mi>f</mi><mrow><mo>(</mo><mrow><mn>&#8722;6</mn></mrow><mo>)</mo></mrow><mo>=</mo><mn>3</mn></mrow></mrow><annotation-xml encoding="MathML-Content"><mrow><mi>f</mi><mrow><mo>(</mo><mrow><mn>&#8722;6</mn></mrow><mo>)</mo></mrow><mo>=</mo><mn>3</mn></mrow></annotation-xml></semantics></math></li>
<li><math xmlns="http://www.w3.org/1998/Math/MathML" display="inline"><semantics><mrow><mrow><munder><mrow><mtext>lim</mtext></mrow><mrow><mi>x</mi><mo stretchy="false">&#8594;</mo><msup><mn>&#8722;3</mn><mo>&#8722;</mo></msup></mrow></munder><mi>f</mi><mrow><mo>(</mo><mi>x</mi><mo>)</mo></mrow><mo>=</mo><munder><mrow><mtext>lim</mtext></mrow><mrow><mi>x</mi><mo stretchy="false">&#8594;</mo><msup><mn>&#8722;3</mn><mo>+</mo></msup></mrow></munder><mi>f</mi><mrow><mo>(</mo><mi>x</mi><mo>)</mo></mrow><mo>=</mo><mn>2</mn></mrow></mrow><annotation-xml encoding="MathML-Content"><mrow><munder><mrow><mtext>lim</mtext></mrow><mrow><mi>x</mi><mo stretchy="false">&#8594;</mo><msup><mn>&#8722;3</mn><mo>&#8722;</mo></msup></mrow></munder><mi>f</mi><mrow><mo>(</mo><mi>x</mi><mo>)</mo></mrow><mo>=</mo><munder><mrow><mtext>lim</mtext></mrow><mrow><mi>x</mi><mo stretchy="false">&#8594;</mo><msup><mn>&#8722;3</mn><mo>+</mo></msup></mrow></munder><mi>f</mi><mrow><mo>(</mo><mi>x</mi><mo>)</mo></mrow><mo>=</mo><mn>2</mn></mrow></annotation-xml></semantics></math></li>
